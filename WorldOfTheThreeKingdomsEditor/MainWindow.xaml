<Window x:Class="WorldOfTheThreeKingdomsEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldOfTheThreeKingdomsEditor"
        mc:Ignorable="d"
        Title="中华三国志剧本编辑器" Height="720" Width="1280">
    <Window.CommandBindings>
        <CommandBinding Command="Open" Executed="OpenCommandBinding_Executed"/>
        <CommandBinding Command="Save" Executed="SaveCommandBinding_Executed"/>
        <CommandBinding Command="Copy" Executed="CopyCommandBinding_Executed"/>
        <CommandBinding Command="Paste" Executed="PasteCommandBinding_Executed"/>
        <CommandBinding Command="Delete" Executed="DeleteCommandBinding_Executed"/>
    </Window.CommandBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="档案">
                <MenuItem Header="读取剧本" Command="Open" InputGestureText="Ctrl+O"/>
                <MenuItem Header="储存劇本" Command="Save" InputGestureText="Ctrl+S"/>
                <Separator/>
                <MenuItem Header="更新 Scenarios.json" Click="btnSyncScenario_Click"/>
                <Separator/>
                <MenuItem Header="退出" Click="btnQuit_Click"/>
            </MenuItem>
            <MenuItem Header="编辑">
                <!--<MenuItem IsCheckable="true" Header="包含標題" IsChecked="true" Checked="MenuItem_IncludeTitle_Checked" Unchecked="MenuItem_IncludeTitle_Unchecked"/>-->
                <MenuItem Header="复制" Command="Copy" InputGestureText="Ctrl+C"/>
                <MenuItem Header="粘贴" Command="Paste" InputGestureText="Ctrl+V"/>
                <MenuItem Header="删除" Command="Delete"/>
            </MenuItem>
            <MenuItem Header="功能">
                <MenuItem Header="新增势力" Click="btnNewFaction_Click"/>
                <MenuItem Header="新增随机角色" Click="btnNewPerson_Click" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="随机化人物相性" Click="btnRandomizeIdeal_Click"/>
                <MenuItem Header="随机化人物性格" Click="btnRandomizePersonality_Click"/>
                <MenuItem Header="随机化人物寿命" Click="btnRandomizeDeadYear_Click"/>
                <MenuItem Header="随机化登场地点" Click="btnRandomizeAvailableLocation_Click"/>
                <Separator/>
                <MenuItem Header="删除所有势力外交关系" Click="btnDeleteAllDiplomacy_Click"/>
                <Separator/>
                <MenuItem Header="重新设置城池连接" Click="btnRedoArchitectureLinks_Click"/>
            </MenuItem>
			<MenuItem Header="语言">
                <MenuItem IsCheckable="false" Header="简体中文" IsChecked="true"/>
            </MenuItem>
			<!--
			<MenuItem Header="帮助">
                <MenuItem Header="版本资讯" Click="btnVersionInfo_Click"/>
            </MenuItem>
			-->
			<!--
			<MenuItem IsCheckable="true" Header="包含標題" IsChecked="true" Checked="MenuItem_IncludeTitle_Checked" Unchecked="MenuItem_IncludeTitle_Unchecked"/>
			-->
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="lblColumnHelp"/>
            </StatusBarItem>
        </StatusBar>
